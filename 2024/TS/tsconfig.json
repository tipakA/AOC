{
  "compilerOptions": {
    "incremental": true,
    "lib": ["ES2023"],
    "target": "ES2022",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./",
    "composite": true,
    "removeComments": false,
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true
  }
}
